<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/material_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.atctech.parent.fragments.PasswordChangeFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.CardView
            android:background="#795548"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp">


        <LinearLayout
        android:background="@drawable/xml_border_light"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        android:padding="20dp">

        <EditText
            android:background="@drawable/formstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newPassword"
            android:hint="Enter a New Password"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:background="@drawable/formstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmPassword"
            android:hint="Confirm Password"/>


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/changePasswordSubmit"
            android:layout_marginTop="15dp"
            android:textColor="#FFF"
            android:background="@drawable/buttonstyle"
            android:textAlignment="center"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
